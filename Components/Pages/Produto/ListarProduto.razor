@page "/Produto/Listar"
@using AppExemplo.Models
@using SistemaBelezaCrystal.Models
@inject ProdutoDAO produtoDAO

<PageTitle>Produtos Cadastrados</PageTitle>

<div class="conteudo-lista">
    <h2 class="titulo-lista">Produtos Cadastrados</h2>

    <NavLink href="/produto">
    <button class="cadastrar-button">
        Cadastrar Produto
        </button>
    </NavLink>

    @if (produtos.Count == 0)
    {
        <div class="mensagem-vazia">
            <p>Ainda não há produtos cadastrados.</p>
        </div>
    }
    else
    {
        <table class="tabela-produtos">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nome</th>
                    <th>Preço</th>
                    <th>Marca</th>
                    <th>Validade</th>
                    <th>Acões</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int contador = 1;
                    foreach (var produto in produtos)
                    {
                        <tr>
                            <td>@contador</td>
                            <td>@produto.Nome</td>
                            <td>@produto.Preco</td>
                            <td>@produto.Marca</td>
                            <td>@produto.Validade</td>
                            <td>
                                <a href="/produtos/@produto.Id/editar" class="btn btn-sm btn-primary mr-2">
                                    <i class="fas fa-edit"></i> Atualizar
                                </a>
                                <a href="/produtos/@produto.Id/excluir" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i> Excluir
                                </a>
                            </td>
                        </tr>
                        contador++;
                    }
                }
            </tbody>
        </table>
    }
</div>

@code {
    private List<Produto> produtos = new();

    protected override void OnInitialized()
    {
        produtos = produtoDAO.ListarTodos();
    }
}